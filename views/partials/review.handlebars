<div class="card">
    <div class="row">
        <div class="col-sm-2">
            <img class="d-block cover-block" src="{{book.book_cover}}" alt="{{book.book_name}}">
        </div>
        <div class="col-sm-10">
            <div class="card-block">
                <h4 class="card-title">
                    <p class="bookTitle">
                        {{book.book_name}}</p>
                </h4>
                <p><strong>By:</strong> {{book.author_name}}.</p>
                <p class="bookDesc">{{book.description}}</p>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="review-card-block">
                <h4 class="card-title">
                    <p class="reviewTitle">
                        Review</p>
                </h4>
                <p class="reviewCreate">Rating:  {{{getStars rating}}}</p>
                <p class="reviewCreate">Created
                    by {{user.name}}
                    on
                    {{formatDate created_at}}
                </p>
                <p class="reviewDescMain">{{comment}}</p>                
            </div>
        </div>
    </div>
</div>
<br>